<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.chxt</groupId>
        <artifactId>fan-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>start</artifactId>
    <packaging>jar</packaging>
    <name>start</name>


    <dependencies>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>com.chxt</groupId>
            <artifactId>fan-adapter</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.chxt.Application</mainClass>
                    <layout>JAR</layout>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <forceCreation>true</forceCreation>
                </configuration>
            </plugin>
            

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <!-- <exec executable="scp">
                                    <arg value="target/start-1.0.0-SNAPSHOT.jar" />
                                    <arg value="root@2202.com:/root/fantastic/start.jar" />
                                </exec>
                                <exec executable="scp">
                                    <arg value="run.sh" />
                                    <arg value="root@2202.com:/root/fantastic/run.sh" />
                                </exec>
                                <exec executable="scp">
                                    <arg value="Dockerfile" />
                                    <arg value="root@2202.com:/root/fantastic/Dockerfile" />
                                
                                </exec>
                                <exec executable="ssh">
                                    <arg value="root@2202.com" />
                                    <arg value="sh /root/fantastic/run.sh" />
                                    
                                </exec> -->
                                <exec executable="mkdir">
                                    <arg value="${project.basedir}/docker" />
                                </exec>
                                 <exec executable="cp">
                                    <arg value="target/start-1.0.0-SNAPSHOT.jar" />
                                    <arg value="${project.basedir}/docker/start.jar" />
                                </exec>
                                <exec executable="cp">
                                    <arg value="run.sh" />
                                    <arg value="${project.basedir}/docker/run.sh" />
                                </exec>
                                <exec executable="cp">
                                    <arg value="Dockerfile" />
                                    <arg value="${project.basedir}/docker/Dockerfile" />
                                
                                </exec>
                                <exec executable="cp">
                                    <arg value="/Users/chenxintong/Library/Fonts/阿里巴巴普惠体/Alibaba-PuHuiTi-Regular.ttf" />
                                    <arg value="${project.basedir}/docker/Alibaba-PuHuiTi-Regular.ttf" />
                                </exec>
                                <exec executable="bash">
                                    <arg value="${project.basedir}/docker/run.sh" />
                                    <arg value="${project.basedir}/docker" />
                                </exec>

                                <exec executable="rm">
                                    <arg value="-rf" />
                                    <arg value="${project.basedir}/docker" />
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
        </plugins>
    </build>
</project>